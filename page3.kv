<Page3@ScrollView>
    StackLayout:
        orientation:"lr-bt"
        Button_1:
            text: "1st screen"
            on_press:
                app.root.current="first"
                app.root.transition.direction = "right"


        Button_1:
            text: "2nd screen"
            on_press:
                app.root.current="second"
                app.root.transition.direction = "right"
        Button_1:
            text: "Reload AIRPORTS?"
            on_release: app.call_AIRPORTS_reload()

        Toggle_A:
            text: "Gap active"
            on_state: app.toggle_gap_active(self)

        Toggle_A:
#        ToggleButton:
            text:'TESTING'
            on_state: app.testing_tafs_toggle(self)
#            size_hint:None,1
#            width: '70dp'
        Toggle_A:
            # Multiline threats details
            text: "Multiline Threats"
            on_state: app.multiline_threats__toggle(self)
<Button_1@Button>:
    size_hint:1,None
    height: '30dp'
<Toggle_A@ToggleButton>:
    size_hint:1,None
    height: '30dp'
    background_color:'#1b5585'