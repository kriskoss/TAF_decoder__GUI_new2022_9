<Page3@ScrollView>
    StackLayout:
        orientation:"lr-bt"
        Button_1:
            text: "1st screen"
            on_press:
                app.root.current="first"
                app.root.transition.direction = "right"


        Button_1:
            text: "2nd screen"
            on_press:
                app.root.current="second"
                app.root.transition.direction = "right"
        Button_1:
            text: "Reload AIRPORTS?"
            on_release: app.call_AIRPORTS_reload()
        Toggle_A:
            text:'Search COLOR'
            on_state: app.single_station_color_on(self)

<Button_1@Button>:
    size_hint:1,None
    height: '30dp'
<Toggle_A@ToggleButton>:
    size_hint:1,None
    height: '30dp'
    background_color:'#1b5585'