<EnrDetails@BoxLayout>
    orientation: "vertical"

    Time_slider__label:
        text: app.current_time_str + ": " + app.start_ddhh + ' + ' + app.current_difference_str+'h '


    MyLabel__scroll:
        Final_DISPLAY:
            size_hint_y: None
            height: self.minimum_height # sets height based on the children size!!
            halign: 'left'
            MyLabel:
                id: EnrDetails__DisplayLabel
#                text:app.display_TOP

    Button:
        size_hint: 1, None
        height: "40dp"
        text: "Back"
        background_color:"red"
        on_release:
            app.root.current ="EnrApts__Screen"
            app.root.transition.direction = "left"
            app.enrAptsCtrls.restore_current_difference_str()

    HoursSelection_EnrDetails:
        size_hint:1,None

        height:'40dp'


# 1st Line - TIME DISPLAY
<Time_slider__label@Label>:
    size_hint: 1,None
    height: "25dp"
    markup: True
    font_size: "18dp"


# TAF display
<MyLabel__scroll@ScrollView>:
    do_scroll_y: True

<MyLabel@Label>:

    markup: True
    font_name: "Resources/Fonts/JetBrainsMono-Regular.ttf"

    size_hint_y: None
#    text: app.label__decoded_TAFs
    font_size:  app.TAF_display_font_size
    height: self.texture_size[1]
    text_size: self.width, None
    halign: 'left'

<Final_DISPLAY@StackLayout>:
    do_scroll_y: True

<HoursSelection_EnrDetails@BoxLayout>
    Button:
        text: "All"
        on_release: app.enrAptsCtrls.next_nh__enrDetails_page(72)

    Button:
        text: "16"
        on_release: app.enrAptsCtrls.next_nh__enrDetails_page(16)
    Button:
        text: "12h"
        on_release: app.enrAptsCtrls.next_nh__enrDetails_page(12)

    Button:
        text: "8h"
        on_release: app.enrAptsCtrls.next_nh__enrDetails_page(8)

    Button:
        text: "4h"
        on_release: app.enrAptsCtrls.next_nh__enrDetails_page(4)
        background_color:"#5672f5"

    Button:
        text: "2h"
        on_release: app.enrAptsCtrls.next_nh__enrDetails_page(2)
