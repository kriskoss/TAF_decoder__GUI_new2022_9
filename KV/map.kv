#:kivy 2.0.0
<Map@BoxLayout>

    MapView_my:
        id:id__MapView_my
        size_hint: 10, 1,
#        lat: 52
#        lon: 11
        zoom: 4

        on_lat:
            print(self.lat)
        on_lon:
            print(self.lon)
        MapMarkerPopup:
            id: test_marker_popup
            source: "Resources/MapMarkers/tiles.png"
            lat: 52
            lon: 21
            Button:
                on_release:
                    print(self.ids, 'main.py self.ids')


    StackLayout:
        orientation: "rl-bt"
        spacing: "10dp"
        size_hint: 1, None,
        height:'140dp'


        StackButton:
            text: "APTs"
            background_color: '#5232a8'
            on_release:
                app.root.current ="first"
                app.root.transition.direction = "right"
        StackButton:
            text: "ENR_A"
            background_color: '#6242a1'
            on_press:
                app.root.current="enr_apts"
                app.root.transition.direction = "left"

        StackButton:
            text: "Show g_gr."
            background_color: '#1232a8'
            on_release:
                app.mapControls.add_current_g_group_markers()

