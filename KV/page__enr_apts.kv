<EnrApts@BoxLayout>
    id: id__EnrApts
    orientation: "vertical"

    BoxLayout: # 1st row
        size_hint: 1, None
        height: '40dp'
        EnrBtn:
            text: "APTs"
            background_color: '#5232a8'
            on_release:
                app.root.current ="first"
                app.root.transition.direction = "right"
        EnrBtn:
            text: "MAP"
            height: '40dp'
            background_color: '#6242a9'
            on_press:
                app.root.current="map"
                app.root.transition.direction = "left"

        EnrBtn:
            text: "Show APTs"
            background_color: '#1232a8'
            on_release:
                app.mapControls.add_current_g_group_markers(app)


    BoxLayout:  # 2nd row  - ROUTE INPUT BOX
        id: id__route_box
        size_hint: 1, None
        height: '40dp'

        TextInput:  #   ROUTE InputText
            id: id__route_input
            text: "Eppo epwa"
            hint_text: "Enter ROUTE via Airports"
            multiline: False
            size_hint: 0.8, None
            height: '40dp'
            on_text_validate:
                app.enrAptsCtrls.updateRoute()
                app.mapControls.getValidatedRoute()
                app.enrAptsCtrls.removeAllButtons()

        Button:     #   ROUTE Confirm Button
            id: id_route_confirm_btn
            text: "Confirm?"
            background_color: "green"
            size_hint: 0.2, None
            height: '40dp'
            on_release:
                app.enrAptsCtrls.updateRoute()
                app.mapControls.getValidatedRoute()
                app.enrAptsCtrls.removeAllButtons()

                print(len(app.mapControls.apts_enroute), "[page__enr_apts.kv AAAA")

        Button:
            text: "Clear?"
            size_hint: 0.1, None
            background_color: "red"
            height: '40dp'
            on_release:
                id__route_input.text = ""
                id__route_input.hint_text = "Enter ROUTE via Airports"
                app.enrAptsCtrls.removeAllButtons()

    BoxLayout:
        spacing:'5dp'
        EnrApts__scroll:
            id:id__EnrApts__scroll
#            size_hint:1,1
#            width: '82dp'

<EnrBtn@Button>
    size_hint: 1, None
    height: '40dp'


<EnrApts__scroll@ScrollView>
    id: id__EnrApts__scroll
    Enr_apts_stack:
        id: Enr_apts_stack
        size_hint: 1, None
        height:  self.minimum_height

        orientation: "vertical"
