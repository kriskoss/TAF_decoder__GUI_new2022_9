<EnrApts@BoxLayout>

    orientation: "vertical"

    BoxLayout: # 1st row
        size_hint: 1, None
        height: '40dp'
        EnrBtn:
            text: "APTs"
            background_color: '#5232a8'
            on_release:
                app.root.current ="first"
                app.root.transition.direction = "right"
        EnrBtn:
            text: "MAP"
            height: '40dp'
            background_color: '#6242a9'
            on_press:
                app.root.current="map"
                app.root.transition.direction = "left"

        EnrBtn:
            text: "Show APTs"
            background_color: '#1232a8'
            on_release:
                app.mapControls.add_current_g_group_markers(app)


    BoxLayout:  # 2nd row  - ROUTE INPUT BOX
        id: id__route_box
        size_hint: 1, None
        height: '100dp'
        orientation:"vertical"

        TextInput:  #   ROUTE InputText
            id: id__route_input
            text: "Epwa eppo"
            hint_text: "Enter ROUTE via Airports"
            multiline: True
            size_hint: 1, 1
#            height: '80dp'
            on_text_validate:
                app.enrAptsCtrls.updateRoute()
                app.mapControls.createValidatedRouteAndMapMarkers()
                app.enrAptsCtrls.removeAllButtons()
        BoxLayout:
            size_hint: 1, None
            height: '40dp'
            Button:     #   ROUTE Confirm Button
                id: id_route_confirm_btn
                text: "Confirm?"
                background_color: "green"
                size_hint: 0.6, 1

                on_release:
                    app.enrAptsCtrls.updateRoute()
                    app.mapControls.createValidatedRouteAndMapMarkers()
                    app.enrAptsCtrls.removeAllButtons()

                    print(len(app.mapControls.apts_enroute), "[page__enr_apts.kv AAAA")

            Button:
                text: "Clear?"
                size_hint: 0.4, 1
                background_color: "red"

                on_release:
                    id__route_input.text = ""
                    id__route_input.hint_text = "Enter ROUTE via Airports"
                    app.enrAptsCtrls.removeAllButtons()
    Label:
        id: messageBox
        text: ""
        size_hint: 1, None
        height: '30dp'
        color: 'yellow'
        font_size: '16dp'
        font_name: 'Roboto-Bold.ttf'
        bold: True

    BoxLayout:
        spacing:'5dp'
        orientation: "horizontal"

        EnrApts__scroll:
            id:id__EnrApts__scroll
#            size_hint:1,1
#            width: '82dp'

        BoxLayout:
            size_hint:None,1
            width:'60dp'
            orientation: "vertical"
            Button:
                text: "All"
                on_release: app.enrAptsCtrls.next_nh__enr_apts_page(72)

            Button:
                text: "16"
                on_release: app.enrAptsCtrls.next_nh__enr_apts_page(16)
            Button:
                text: "12h"
                on_release: app.enrAptsCtrls.next_nh__enr_apts_page(12)

            Button:
                text: "8h"
                on_release: app.enrAptsCtrls.next_nh__enr_apts_page(8)

            Button:
                text: "4h"
                on_release: app.enrAptsCtrls.next_nh__enr_apts_page(4)
                background_color:"#5672f5"

            Button:
                text: "2h"
                on_release: app.enrAptsCtrls.next_nh__enr_apts_page(2)
            Button:
                text: "Details"
                background_color: '#2252a1'
                on_release:
                    app.root.current ="EnrDetails__Screen"
                    app.root.transition.direction = "right"
<EnrBtn@Button>
    size_hint: 1, None
    height: '40dp'


<EnrApts__scroll@ScrollView>
    id: id__EnrApts__scroll
    Enr_apts_stack:
        id: Enr_apts_stack
        size_hint: 1, None
        height:  self.minimum_height
        spacing:'3dp'
        orientation: "vertical"
