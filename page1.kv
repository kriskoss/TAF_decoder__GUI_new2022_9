#:kivy 2.0.0

<Page1@BoxLayout>
    orientation:"vertical"
    spacing:'5dp'
    padding:'5dp'
    Nav_page1:
    Top_Bar:
        id: id__Top_Bar
        size_hint: 1, None
        height: '60dp'
        font_size: "20dp"

    Search__container:
        spacing:'5dp'
        ToggleButton:
            text:'COLOR ON+'
            bold: True
            font_size:"12dp"
            on_state:
                app.single_station_color_on(self)
            size_hint:None,1
            width: '82dp'

        Search_textInput:
            id:Search_textInput

        Button:
            # CLR - BUTTON
            on_release:
                Search_textInput.text=''
                app.search_hint="Search"
            text: "CLR"
            size_hint:None,1
            width: '60dp'
    Label:
        markup:True
        size_hint:1,None
        height:"10dp"
        font_size:"16dp"
        text:app.current_time_str

    Label:
        markup:True
        size_hint:1,None
        height:"10dp"
        font_size:"16dp"
        text: app.PAGE1_time_range

    BoxLayout:
        spacing:'5dp'
        Last_requests__scroll:
            id:id__Last_requests__scroll
            size_hint:None,1
            width: '82dp'

        TAF_groups__scroll:
            id: id__TAF_groups__scroll



    BoxLayout:
        size_hint:1,None
        height:'40dp'
        Button:
            text: "All"
            on_release: app.next_nh_PAGE1(72)

        Button:
            text: "16"
            on_release: app.next_nh_PAGE1(16)
        Button:
            text: "12h"
            on_release: app.next_nh_PAGE1(12)

        Button:
            text: "8h"
            on_release: app.next_nh_PAGE1(8)

        Button:
            text: "4h"
            on_release: app.next_nh_PAGE1(4)
            background_color:"#5672f5"

        Button:
            text: "2h"
            on_release: app.next_nh_PAGE1(2)


<Search__container@BoxLayout>:
    size_hint: 1, None
    height: '40dp'

####
<Top_Bar@BoxLayout>
    orientation:'vertical'
    Button:
        text: app.reload_button_msg
        on_press: app.reloading_inprogress()
        on_release: app.call_TAFs_reload_THREAD()
        background_color: app.reload_status
        font_size:"20dp"

    Label:
        text: app.reload_TAFs_msg
        font_size:"14dp"

<Nav_page1@BoxLayout>:
    size_hint:1,None
    height:'30dp'
    Button:
        text: "TAFs"

        on_press:
            app.root.current="second"
            app.root.transition.direction = "left"
### TESTING - transfer to page 5 - SINGLE TAF view
    Button:
        text: "Settings"
        on_press:
            app.root.current="third"
            app.root.transition.direction = "left"
    Button:
        text: "MAP"
        size_hint_x: 0.5
        background_color: '#6242a9'
        on_press:
            app.root.current="map"
            app.root.transition.direction = "left"

    Button:
        text: "Add group"
        on_press:
            app.root.current="fourth"
            app.root.transition.direction = "left"


<Search_textInput@TextInput>:
    hint_text: app.search_hint
    font_size:"25dp"
    halign: "center"
    multiline: False
    on_text_validate: app.load_single_TAF(self)
    on_text:
        ## Introduces search functionality
        # Passes the search inputText value
        app.update_search_input(self)



####
<TAF_groups__scroll@ScrollView>:
    TAF_groups_Stack:
        id: id__TAF_groups_Stack
        size_hint: 1, None
        height:  self.minimum_height
        # "left-right, right-left, top-bottom, bottom-top"
        orientation: "lr-tb"
        spacing:"5dp",

<Last_requests__scroll@ScrollView>
    Last_requests:
        id: id__Last_requests
        size_hint: 1, None
        height:  self.minimum_height
        # "left-right, right-left, top-bottom, bottom-top"
        orientation: "lr-tb"
        spacing:"5dp",

<TAF_groups_Stack>
    orientation: "rl-tb"







###END - Page 1