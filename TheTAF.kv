<PageLayoutExample@PageLayout>
    Main_Box:
    Page2:
    Page3:

<Main_Box>
    orientation:"vertical"
    Box_Top:
        size_hint: 1, 0.2
    TAF_groups__scroll:
    Box_Bottom:


####
<Box_Top>
    Button:
        text: "Reload TAFs"
        on_release: root.call_TAFs_reload()

    Button:
        text: "Reload AIRPORTS"
        on_release: root.call_AIRPORTS_reload()
    ToggleButton:
        text: "Add Time (t): OFF"
        on_state: root.show_T_time_toggle(self)
    Button:
        text:"test"
        on_press: root.print_tt()

####
<TAF_groups__scroll@ScrollView>:
    TAF_groups_Stack:
        size_hint: 1, None
        height:  self.minimum_height

<TAF_groups_Stack>
    orientation: "rl-tb"

<Box_Bottom@BoxLayout>:
    size_hint: 1, None
    height: "40dp"

    Button:
        text: "Add Group"
    Button:
        text: "Edit Group"
    Button:
        text: "Remove Group"

###END - Page 1

### PAGE 2 -- coloured TAFs dispaly ###########
<Page2@BoxLayout>:
    orientation: "vertical"
    BoxLayout:
        ## Page main layout
        size_hint:1,None
        height: "80dp"
        Button:
            text: "Day 1"
        Button:
            text: "Day 2"
        Time_Sliders:
            text: "Time slider place holder"
            size_hint:3,1

    Button:
        text: "Label 1"
    Button:
        text: "Label 2"

<Time_Sliders@BoxLayout>:
    orientation:"vertical"
    Time_Start:
    Time_End:

<Time_Start@BoxLayout>:
    Slider:
        id: time_start__slider
        min:0
        max:48
        value:24
    Label:
        text: str(int(time_start__slider.value))
        size_hint: 0.2,1

<Time_End@BoxLayout>:
    Slider:
        id: time_end__slider
        min:0
        max:48
        value:24
    Label:
        text:str(int(time_end__slider.value))
        size_hint: 0.2,1


##### PAGE 3 ---- Database Access
<Page3@BoxLayout>
    orientation: "vertical"
    Add_Group:
    Button:
        text:  "nothing"


<Add_Group>:
    #Add_New_Airport

    size_hint:1,None
    height: "80dp"
    orientation: "vertical"

    TextInput:
        id: my_g_group_input
        multiline: False
        on_text_validate: root.on_text_validate(self)

    Button:
        text: "Store: " +root.new_group_str
        on_press: root.call_add_new_group()

    Label:
        color: (0.6,0.5,0,1)
        text: root.terminal_answer
