Layouts

<Layouts@PageLayout>
    Page1:
        id: id__Page1
    Page2:
        id: id__Page2

<Page1@BoxLayout>
    orientation:"vertical"
    Top_Bar:
        id: id__Top_Bar
        size_hint: 1, 0.2
    TAF_groups__scroll:
        id: id__TAF_groups__scroll
    Add_Group:
        id: id__Add_Group
    Label:
        id: label__test
        text: app.label__test



####
<Top_Bar>
    Button:
        text: "Reload TAFs"
        on_release: root.call_TAFs_reload()

    Button:
        text: "Reload AIRPORTS?"
        on_release: root.call_AIRPORTS_reload()
    ToggleButton:
        text: "Add Time (t): OFF"
        on_state: root.show_T_time_toggle(self)
    Button:
        text: "Test add TIME (t)"
        on_press: root.print_tt()


####
<TAF_groups__scroll@ScrollView>:
    TAF_groups_Stack:
        id: id__TAF_groups_Stack
        size_hint: 1, None
        height:  self.minimum_height

<TAF_groups_Stack>
    orientation: "rl-tb"


<Add_Group>:
    #Add_New_Airport

    size_hint:1,None
    height: "80dp"
    orientation: "vertical"

    TextInput:
        id: my_g_group_input
        multiline: False
        on_text_validate: root.on_text_validate(self)

    Button:
        text: "Store: " +root.new_group_str
        on_press: root.call_add_new_group()

    Label:
        color: (0.6,0.5,0,1)
        text: root.terminal_answer



###END - Page 1

### PAGE 2 -- coloured TAFs dispaly ###########
<Page2@BoxLayout>:
    id:Page2
    orientation: "vertical"
    Time_settings:

    Label:
        id: label__taf_display
        text: app.label__taf_display

<Time_settings@BoxLayout>:
    size_hint:1,None
    height: "80dp"

    Button:
        text: "Day 1"
        size_hint:None,1
        width: "80dp"

    Button:
        text: "Day 2"
        size_hint:None,1
        width: "80dp"


    Time_Sliders:
        size_hint: 4, 1

<Time_Sliders@BoxLayout>:
    orientation:"vertical"
    Time_Start__container:
    Time_End__container:

<Time_Start__container@BoxLayout>:
    Slider:
        id: time_start__slider
        min:0
        max:48
        value:0
        on_value: app.on_slider_value__start(self)
    Label:
        #text: str(int(app.slider_value_txt__start))

        size_hint: 0.2,1

<Time_End__container@BoxLayout>:
    Slider:
        id: time_end__slider
        min:0
        max:48
        value:48
        on_value: app.on_slider_value__end(self)
    Label:
        #text:str(int(app.slider_value_txt__start))
        size_hint: 0.2,1


