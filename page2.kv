### PAGE 2 -- coloured TAFs dispaly ##################################################
<Page2@BoxLayout>:
    orientation: "vertical"
    Nav_page2:

    Time_settings:
        id: Time_settings

    Time_Sliders:
        id: Time_sliders


    MyLabel__scroll:
        id: MyLabel__scroll
        MyLabel:
            id: MyLabel


<Nav_page2@BoxLayout>:
    size_hint:1,None
    height: '30dp'

    Button:
        text: "1st screen"

        on_release:
            app.root.current ="first"
            app.root.transition.direction = "right"
    Button:
        text: "3nd screen"

        on_press:
            app.root.current="third"
            app.root.transition.direction = "left"

