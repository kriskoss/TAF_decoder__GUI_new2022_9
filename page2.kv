### PAGE 2 -- coloured TAFs dispaly ##################################################
<Page2@BoxLayout>:
    orientation: "vertical"
    Nav_page2:

    Time_settings:
        id: Time_settings

    MyLabel__scroll:
        id: MyLabel__scroll
        MyLabel:
            id: MyLabel

    Time_Sliders:
        id: Time_sliders


<Nav_page2@BoxLayout>:
    size_hint:1,None
    height: '30dp'

    Button:
        text: "APTs"
        size_hint:None,1
        width: '120dp'
        on_release:
            app.root.current ="first"
            app.root.transition.direction = "right"
    # TIME LABEL
    Time_slider__label:
        text: app.start_ddhh + ' <-> '+ app.end_ddhh

    Button:
        text: "Stgs"

        size_hint:None,1
        width: '60dp'

        on_press:
            app.root.current="third"
            app.root.transition.direction = "left"

<Time_slider__label@Label>:
    size_hint: 1,None
    height: "25dp"
    markup: True
    font_size: "18dp"


<MyLabel__scroll@ScrollView>:
    do_scroll_x: True
    do_scroll_y: True

<MyLabel@Label>:
    id: MyLabel
    markup: True
    font_name: "Resources/Fonts/JetBrainsMono-Regular.ttf"


    size_hint_y: None
    height: self.texture_size[1]
    text_size: self.width, None
    halign: 'left'

    font_size:  app.font_size
    text: app.label__decoded_TAFs

<Font_button@Button>:
    text:'FONT'
    on_press: app.change_font_size()



<Time_settings@BoxLayout>:
    size_hint:1,None
    height: "30dp"

    Button:
        text: "+" + str(app.time_range_txt) +"h"
        on_release: app.update_range("increase")

    Button:
        text: "-" + str(app.time_range_txt) +"h"
        on_release: app.update_range("decrease")

    ToggleButton:
        text: "T"
        on_state:
            app.show_T_time_toggle(self)
    ToggleButton:
        text:'rwy'
        on_state: app.print_appr_info__toggle(self)
    Button:
        text:app.single_counter_txt
        on_release:
            app.single_slider(self)
            app.slider_disable()
            app.hide_slider()
    Font_button:

<Time_Sliders@BoxLayout>:
    # SLIDERS CONTAINER
    orientation:"vertical"
    size_hint:1,None
    height:'40dp'
    Time_slider__slider:
        # START TIME SLIDER
        value: app.value__start_slider
        on_value: app.on_slider_value__start(self)

    Time_slider__slider:
        # END TIME SLIDER
        value: app.value__end_slider
        on_value: app.on_slider_value__end(self)
        disabled: app.slider_variable_boolean
        opacity:app.hide_slider_value


<Time_slider__slider@Slider>:
    min:app.TAFs_validity__earliers_start_txt
    max:app.TAFs_validity__latest_end_txt
    step:1
    size_hint_y: None
    height: app.slider_height


