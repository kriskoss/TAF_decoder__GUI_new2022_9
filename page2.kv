### PAGE 2 -- coloured TAFs dispaly ##################################################
<Page2@BoxLayout>:
    orientation: "vertical"
    TopPanel:
        size_hint:1,None
        height: '30dp'

        # TIME LABEL
        Time_slider__label:
            text: app.start_ddhh + ' <' + app.current_difference_str+'h> '+ app.end_ddhh
        Button:
            text: "Stgs"

            size_hint:None,1
            width: '60dp'

            on_press:
                app.root.current="third"
                app.root.transition.direction = "left"

    MyLabel__scroll:
        id: MyLabel__scroll
        MyLabel:
            id: MyLabel

    StackLayout:
        orientation: "rl-bt"
        spacing: "10dp"
        size_hint: 1, None,
        height:'140dp'
        StackButton:
            text: 'next 12h'
            on_release: app.next_12h(self)
        StackButton:
            # RESET
            text: 'Reset'
            on_release:
                app.reset_time_all_day()

        StackButton:
            # INCREASE time
            text: "+" + str(app.time_range_txt) +"h"
            on_release: app.update_range("increase")

        StackButton:
            # REDUCE time
            text: "-" + str(app.time_range_txt) +"h"
            on_release: app.update_range("decrease")

        StackButton:
            # 1 Slider
            text:"1 Slider"
            on_release:
                app.set_single_slider()
        StackButton:
            # FONT SIZE
            text:'FONT'
            on_press: app.change_font_size()
        StackButton:
            text: "APTs"
            background_color: '#5232a8'
            on_release:
                app.root.current ="first"
                app.root.transition.direction = "right"

        My_ToggleButton:
            text: "T"
            on_state:
                app.show_T_time_toggle(self)

        My_ToggleButton:
            text:'RWY'
            on_state: app.print_appr_info__toggle(self)


        Time_Sliders:
            opacity:0.2




<StackButton@Button>:
    size_hint:None,None
    width: '60dp'
    height:'40dp'
<My_ToggleButton@ToggleButton>:
    size_hint:None,None
    width: '60dp'
    height:'40dp'

<TopPanel@BoxLayout>:


<Time_slider__label@Label>:
    size_hint: 1,None
    height: "25dp"
    markup: True
    font_size: "18dp"


<MyLabel__scroll@ScrollView>:

    do_scroll_y: True

<MyLabel@Label>:
    id: MyLabel
    markup: True
    font_name: "Resources/Fonts/JetBrainsMono-Regular.ttf"

    size_hint_y: None
    height: self.texture_size[1]
    text_size: self.width, None
    halign: 'left'

    font_size:  app.font_size
    text: app.label__decoded_TAFs


<Time_Sliders@StackLayout>:
    orientation:"rl-bt"
    padding:'15dp'
    # SLIDERS CONTAINER

    # START TIME SLIDER
    Time_slider__slider:
        value: app.value__start_slider
        on_touch_down: app.record_difference()
        on_value: app.on_slider_value__start(self)


    # END TIME SLIDER
    Time_slider__slider:

        value: app.value__end_slider
        on_value:
            app.on_slider_value__end(self)
            app.calculating_current_difference()
        disabled: app.slider_variable_boolean
        opacity:app.slider_opacity


<Time_slider__slider@Slider>:
    min:app.TAFs_validity__earliers_start_txt
    max:app.TAFs_validity__latest_end_txt
    step:1
    size_hint_y: None
    height: app.slider_height

    value_track_width:2
    value_track_color: 1,0,0,1
    sensitivity: "all"
    cursor_size: '50dp','50dp'




